    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/cliente",
            "args": ["localhost","-m","${workspaceFolder}/input_files/matriz1.txt","+","${workspaceFolder}/input_files/matriz2.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ],
}